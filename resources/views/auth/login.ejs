<section class="login">
<form action="/login" method="POST">
      
      <% if(messages.error) { %>
        <span style="color: red; font-size: small;"><%= messages.error %></span>
      <% } %>  
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input name="email" style="width: 300px;" type="email" class="form-control" id="inputEmail4">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Password</label>
        <input name="password" style="width: 300px;" type="password" class="form-control" id="inputPassword4">
      </div>
    
    
     
    <button type="submit" style="margin-left:30%" class="ordernow">Log in</button>
    <a href="/register">Don't have account?</a>
  </form>
</section>