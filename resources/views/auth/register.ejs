<section class="register">
    <form action="/register" method="POST" >
      <% if(messages.error) { %>
        <span style="color: red; font-size: small;"><%= messages.error %></span>
      <% } %>  
      
        <div class="form-group col-md-6">
            <label for="Name">Name</label>
            <input name="name" style="width: 300px;" type="text" class="form-control" id="Name">
          </div>
          <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input name="email" style="width: 300px;" type="email" class="form-control" id="inputEmail4">
          </div>
          <div class="form-group col-md-6">
            <label for="inputPassword4">Password</label>
            <input name="password" style="width: 300px;" type="password" class="form-control" id="inputPassword4">
          </div>
        
        
         
        <button type="submit" class="ordernow">Register</button>
        <a href="/login">Already have an account?</a>
      </form>
</section>